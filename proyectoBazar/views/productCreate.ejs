<head>
    <meta charset="UTF-8">
    <title>Bazar e commerce </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--<link rel='stylesheet' href='/stylesheets/style.css' />-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
   
    <link rel="stylesheet" href="../stylesheets/index.css">
    <link rel="stylesheet" href="../stylesheets/footer-menu.css">

     <link rel="stylesheet" href="/stylesheets/productAdd.css">
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet">
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    
<body>
<%- include("partials/header") %>   

<section class="userAccount-section">

 

        <%- include("partials/adminMenu") %>


<div class="dashboard">

    <div>
        <h1 class="productEdit-title dashboardTitle">ABM DE PRODUCTO</h1>
        <form action="/productos/create" enctype="multipart/form-data" method="POST">
            <div class="formulario">
                    <div class="producto">
                        <p>Codigo</p> 
                        <input type="text" name="code" placeholder="Colocar el codigo del producto">
                        <p>Producto</p> 
                        <input type="text" name="name" placeholder="Colocar el nombre del producto">
                        <p>Cantidad de stock</p> 
                        <input type="number" name="stock" placeholder="Ingrese la cantidad de stock"> 

                        <p>Descripcion del producto</p>
                        <textarea name="description" cols="50" rows="10"></textarea>
                        <p>Imagenes</p>
                        <input type="file" name="image" multiple>
                    </div>
                    <div class="contable">
                        <p>Costo</p>
                        <input type="number" name="cost" placeholder="Ingrese el costo del producto">
                        <p>Markup</p>
                        <input type="number" name="markup" placeholder="Ingrese la descripcion del producto">
                        <p>Descuento</p>
                        <input type="number" name="discount" placeholder="Ingrese el descuento">
                       
                        <label for="">Categoria</label>
                            <select name="categoria">
                                <% for (let i=0; i < categories.length; i++) { %>
                                 <option value="<%=categories[i].id%>">
                                    <%=categories[i].name%>
                                </option>
                             <% } %>
                        </select>
               
                                    <div class="botones">
                <button type="submit">Agregar</button>
            </div>
        </form>     
    </div>
    <% if (typeof alert != "undefined") { %>
        <script>Swal.fire({
            position: 'top-middle',
            icon: 'success',
            title: 'Producto cargado con exito!',
            showConfirmButton: false,
            timer: 1500
          })</script>
    <% } %>

   
</div>




</section>

<%- include("partials/footer") %>

</body>
<script src="/js/productCreate.js">
          
</script>