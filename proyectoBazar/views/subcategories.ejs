<head>
    <meta charset="UTF-8">
    <title>Bazar e commerce </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--<link rel='stylesheet' href='/stylesheets/style.css' />-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="stylesheet" href="/stylesheets/productAdd.css">
    <link rel="stylesheet" href="/stylesheets/index.css">
    
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet">    
</head>

<body>
<%- include("partials/header2") %>   

<section class="userAccount-section">

 

        <%- include("partials/adminMenu") %>


<div class="dashboard">

    <div>
        <h1 class="productEdit-title dashboardTitle">ALTA DE SUBCATEGORIA</h1>

        <form action="/admin/subcategories"  method="POST">
            <label for="">Eleji Categoria</label>
            <select name="categories">
                    <% for (let i=0; i < categories.length; i++) { %>
                <option value="<%=categories[i].id%>">
                    <%=categories[i].name%>
                </option>
                <% } %>
            </select>
                        
       
            <div class="formulario">
                    <div class="producto">
                        <p>Subcategoria</p> 
                        <input type="text" name="name" placeholder="Colocar el nombre de la subgategoria">                    
                       
            <div class="botones">
                <button type="submit">Agregar</button>
            </div>
        </form>

    </div>

    <% if(typeof errors != "undefined"){ %>
        <ul>
            <% for (let i = 0; i < errors.length; i++){ %>
            <li>
                <%= errors[i].msg %>
            </li>
            <% } %>
        </ul>
    <% } %>

    <% if (typeof alert != "undefined") { %>
        <script>Swal.fire({
            position: 'top-middle',
            icon: 'success',
            title: 'Categoria cargada con exito!',
            showConfirmButton: false,
            timer: 1500
          })</script>
    <% } %>

   
</div>




</section>

<%- include("partials/footer2") %>

</body>
<script src="/js/productCreate.js">
          
</script>