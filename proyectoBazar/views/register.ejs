<html>
    <%- include("partials/head") %> 
    <body>
      <%- include("partials/header") %> 
        <div class="login1">
            <main>
                <div class="ventanaFormulario">
                    <form action="/users/register" enctype="multipart/form-data" method="POST">
                        <div class="titulo">
                            <label for="name">
                                <em>
                                   <mark>Registrate:</mark>
                                </em>
                            </label>
                        </div>
                        <div class="datos">
                            <input type="text" id="name" name="nombre" placeholder="Nombre"></div>
                        <div class="datos">
                            <input type="text" name="apellido" placeholder="Apellido">
                        </div>
                        <div class="datos">
                            <input type="email" name="email" placeholder="Dirc.Correo Electronico">
                        </div>
                        <div class="datos">
                            <input type="password" name="password" placeholder="Crea una contraseña">
                        </div>    
                        <div class="datos">
                            <select name="cliente">
                                 <option disabled>-Tipo de Cliente-</option>
                                 <option value="mayorista">Mayorista</option>
                                 <option value="C.f">Minorista</option>
                            </select>
                        </div>
                        <div class="datos">
                            <input type="file" name="avatar">
                        </div>
                        <button class="primerButton" type="submit">
                            Crear Cuenta    
                        </button>
                        <p>
                         <em>¿Tenes cuenta?</em>
                        </p>
                        <a href="/users/login">
                         <div class="link">
                            <p>Iniciar Sesión</p>
                         </div>
                        </a>
                        <% if(typeof errores != "undefined"){ %>
                        <ul>
                            <% errores.forEach(function(error){ %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                        </ul>
                        <% } %>
                    </form>
                </div>
            </main>
        </div>
      <%- include("partials/footer") %>   
    </body>
</html>