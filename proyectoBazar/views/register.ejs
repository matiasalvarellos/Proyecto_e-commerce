<html>
    
    <script src="/js/registro.js"></script>

    <%- include("partials/head") %> 
    <body>
      
      <%- include("partials/header") %> 
        <div class="login1">
            <main>
                <div class="ventanaFormulario">
                    <form action="/users/register" class= "regi" enctype="multipart/form-data" method="POST">
                        <div class="titulo">
                            <label for="name">
                                <em>
                                   <mark>Registrate:</mark>
                                </em>
                            </label>
                        </div>
                        <div class="datos">
                            <input type="text" class="inputdatos" id="name" name="name" placeholder="Nombre" value="<%= typeof old != "undefined" ? old.name : "" %>">
                        <p class="invalid-feedback"></p>
                        </div>
                        <div class="datos">
                            <input type="text" class="inputdatos" id="last_name" name="last_name" placeholder="Apellido" value="<%= typeof old != "undefined" ? old.last_name : "" %>">
                        <p class="invalid-feedback"></p>
                        </div>

                        <div class="datos">
                            <input type="email"  class="inputdatos" id="email" name="email" placeholder="Dirc.Correo Electronico" value="<%= typeof old != "undefined" ? old.email : "" %>">
                        <p class="invalid-feedback"></p>
                        </div>
                        
                        <div class="datos">
                            <input type="password" class="inputdatos" id="password" name="password" placeholder="Crea una contraseña">
                        <p class="invalid-feedback"></p>
                        </div>    
                        <div class="datos">
                            <select name="type_customer">
                                 <option disabled>-Tipo de Cliente-</option>
                                 <option value="mayorista">Mayorista</option>
                                 <option value="C.f">Minorista</option>
                            </select>
                        </div>
                        <div class="imagenArchivo">
                            <label for="avatar">Agregar Imagen Avatar</label><br>
                            <input type="file" id="avatar"  name="avatar">
                        </div>
                        <button class="primerButton" type="submit">
                            Crear Cuenta    
                        </button>
                        <p>
                         <em>¿Tenes cuenta?</em>
                        </p>
                        <a href="/users/login">
                         <div class="link">
                            <p>Iniciar Sesión</p>
                         </div>
                        </a>
                        <% if(typeof errores != "undefined"){ %>
                        <ul>
                            <% errores.forEach(function(error){ %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                        </ul>
                        <% } %>
                    </form>
                </div>
            </main>
        </div>
      <%- include("partials/footer") %>   
    </body>
</html>