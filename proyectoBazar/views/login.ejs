<html>
    <%- include('partials/head') %>
    <body>
     
    <%- include("partials/header") %>
            <main>
                <div class="ventanaFormulario">
                    <form action="/users/login" method="POST">
                        <div class="titulo">
                            <label for="email">
                                <em>
                                    <mark>
                                     Iniciar sesíon en tu cuenta:
                                    </mark>
                                </em>
                            </label>
                        </div>
                        <div class="datos">
                             <input type="email" id="email" name="email" placeholder="Email Adress (required)" value="<%= typeof old != "undefined" ? old.email : "" %>">
                        </div>
                        <div class="datos">
                             <input type="password" name="password" placeholder="Password (required)"><br>
                             <a href="">¿Olvidaste tu contraseña?</a>
                        </div>
                        <div>
                            <input type="checkbox" name="recordame" id="recordame"><label for="recordame">Recordame</label>
                        </div>
                        <p>
                            <button class="primerButton" type="submit">
                                Iniciar sesión
                            </button>
                        </p>
                        <p>
                            <em>
                             ¿No tenes cuenta?
                            </em>
                        </p>
                        <a href="/users/register">
                            <div class="link">
                                <p>
                                 Registrate Ya!
                                </p>
                            </div>
                        </a>
                        <% if(typeof errores != "undefined"){ %>
                        <ul>
                            <% errores.forEach(function(error){ %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                        </ul>
                        <% } %>
                    </form>
                </div>
            </main>
 </div>

 <%- include("partials/footer") %>

</body>
</html>